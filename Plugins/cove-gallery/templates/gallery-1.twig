{% extends "templates/base.twig" %}
{% block content %}
	{{content}}
	{% for image in images|slice(1) %}
  <div class="img-container img-mini first"> <a class="fancybox" rel="{{atts.title}}"  href="{{image.large}}"><div style="background-image:url('{{image.thumbnail}}')" class="img"></div></a></div>
	{% endfor %}
{% endblock %}

{% block subcontent %}
   <div class="img-container img-major img1"><a class="fancybox" rel="{{atts.title}}"  href="{{images[0][0]}}"><div class="img" style="background-image:url('{{images[0].large}}')"></div></a></div>
{% endblock %}